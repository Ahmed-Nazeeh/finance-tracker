<h1>My Portfolio</h1>


<div class="row justify-content-end">
  <div class="col-4">
      <%= link_to 'Update Prices' , user_stock_path(current_user.id), class: "btn btn-lg btn-success", :method => "put" %>
  </div>
</div>
    

<div class='search-area'>
    <h3>Search Stock</h3>
    <%= form_tag search_stock_path, remote: true, method: :get do %>
        <div class="form-group row">
            <div class="col-sm-9  no-right-padding">
                <%= text_field_tag :stock, params[:stock], placholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 2x' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div id="results"></div>

<% if !@tracked_stocks.empty? %>
    <%= render 'stocks/list' %>
<% end %>


