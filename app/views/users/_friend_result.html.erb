<div class="results-block">
    <%= render 'layouts/messages' %>
</div>

<% if @friends %>
    <div class="card card-header results-block">
        <table class="col-md12">
            <tbody>
                <% @friends.each do |friend| %> 
                    <tr>
                        <td><strong>Name:</strong> <%= friend.full_name %></td>
                        <td><strong>Email:</strong> <%= friend.email %></td>
                        <td><strong>Action:</strong> <%= link_to "View Profile", user_path(friend), class: 'btn btn-sm btn-success' %>
                        <% if current_user.not_friends_with?(friend.id) %>
                            <%= link_to 'follow friend', friendships_path(friend: friend), method: :post, class: "btn btn-sm btn-success" %>
                        <% else %>
                            <span class="badge badge-secondary">
                            You are friends
                            </span>
                        <% end %>
                        </td>
                    </tr>
                <% end %>
            <tbody>
        <table>
    </div>
<% end %>